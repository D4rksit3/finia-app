{
  "expo": {
    "name": "FINIA",
    "slug": "finia-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "finia",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0E27"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.finia.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0E27"
      },
      "package": "com.finia.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-camera",
        {
          "cameraPermission": "Permite a FINIA usar la cámara para escanear recibos y capturar comprobantes."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "FINIA necesita acceso a tus fotos para adjuntar imágenes de recibos.",
          "cameraPermission": "FINIA necesita acceso a la cámara para capturar imágenes de recibos."
        }
      ],
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "FINIA necesita acceso al micrófono para el reconocimiento de voz en transacciones.",
          "speechRecognitionPermission": "FINIA necesita acceso al reconocimiento de voz para agregar transacciones hablando."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "dc7385c1-43df-42d7-b954-88ea8016961f"
      }
    },
    "owner": "jroque"
  }
}
